<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bp_dark_grey"
    android:orientation="vertical" >

	<Button
	    android:id="@+id/invbutton"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_centerHorizontal="true"
	    android:layout_marginBottom="30dp"
	    android:text="@string/com_facebook_choose_friends"
	    android:textColor="@color/bp_white" />

	<EditText
	    android:id="@+id/editText1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"
	    android:layout_marginLeft="19dp"
	    android:layout_marginTop="66dp"
	    android:ems="10"
	    android:inputType="text"
	    android:text="@string/name_your_boind_point"
	    android:textColor="@color/bp_light_grey"
	    android:textSize="20sp" >

	    <requestFocus />
	</EditText>

</RelativeLayout>
