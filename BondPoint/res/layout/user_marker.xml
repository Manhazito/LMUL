<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
 
	<ImageView
        android:id="@+id/user_marker_pic"
        android:layout_width="@dimen/user_marker_photo_size"
        android:layout_height="@dimen/user_marker_photo_size"
        android:contentDescription="@string/userMarker"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
    />
    
	<ImageView
        android:layout_width="@dimen/user_marker_width"
        android:layout_height="@dimen/user_marker_height"
        android:src="@drawable/custom_marker"
        android:contentDescription="@string/userMarkerBorder"
    />

</RelativeLayout>